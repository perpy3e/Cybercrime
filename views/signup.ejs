    <div class="container text-start mt-5 pt-4 pb-2" style="max-width: 50%; background-color: aliceblue;" id="move">

        <h1 class="display-5 text-capitalize text-primary mb-3">REGISTER</h1>
        <div class="row" >
            <div class="col-12">

                <form class="was-validated">
                    <div class="mb-3">
                        <label for="name">Name and Surname</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                        <div class="invalid-feedback"> Please enter your name and surname</div>
                    </div>

                    <div class="mb-3">
                        <label for="username">Username</label>
                        <input type="username" class="form-control" id="username" placeholder="Your username" required>
                        <div class="invalid-feedback"> Please enter your username</div>
                    </div>
                    <div class="row-cols-2">
                        <div class="form-check ">
                            <input type="radio" class="form-check-input" id="male" name="radio-stacked" required>
                            <label class="form-check-label" for="male">Male</label>
    
                        </div>
                        <div class="form-check  ">
                            <input type="radio" class="form-check-input" id="female" name="radio-stacked" required>
                            <label class="form-check-label" for="female">Female</label>
    
                            <div class="invalid-feedback">Please select your sex</div>
                        </div>
                    </div>

                    
                    


                    <div class="row mb-3">
                        <!-- Day Dropdown (col-4 for 3 equal columns) -->
                        <div class="col-md-4">
                            <label for="day">Day:</label>
                            <select id="day" name="day" class="form-select" required>
                                <option value="">Select Day</option>
                            </select>
                        </div>

                        <!-- Month Dropdown (col-4 for 3 equal columns) -->
                        <div class="col-md-4">
                            <label for="month">Month:</label>
                            <select id="month" name="month" class="form-select" required>
                                <option value="">Select Month</option>
                            </select>
                        </div>

                        <!-- Year Dropdown (col-4 for 3 equal columns) -->
                        <div class="col-md-4">
                            <label for="year">Year:</label>
                            <select id="year" name="year" class="form-select" required>
                                <option value="">Select Year</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Please enter your email"
                            required>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>


                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter your password"
                            minlength="8" required>
                        <div class="invalid-feedback">Password must be at least 8 characters.</div>
                    </div>

                    <div class="mb-3">
                        <label for="phone">Phone number</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Your phone number" pattern="[0-9]{10}" required>
                        <div class="invalid-feedback"> Please enter a valid phone number</div>
                    </div>


                    <div class="mb-3">
                        <button class="btn btn-primary align-items-center" type="submit">Submit form</button>
                    </div>
                </form>



                <script>
                    // Dynamically populate the Day dropdown
                    const daySelect = document.getElementById("day");
                    for (let i = 1; i <= 31; i++) {
                        const option = document.createElement("option");
                        option.value = i;
                        option.text = i;
                        daySelect.appendChild(option);
                    }

                    // Dynamically populate the Month dropdown
                    const monthSelect = document.getElementById("month");
                    const months = ["January", "February", "March", "April", "May", "June",
                        "July", "August", "September", "October", "November", "December"];
                    months.forEach((month, index) => {
                        const option = document.createElement("option");
                        option.value = index + 1;
                        option.text = month;
                        monthSelect.appendChild(option);
                    });

                    // Dynamically populate the Year dropdown (from current year back to 1900)
                    const yearSelect = document.getElementById("year");
                    const currentYear = new Date().getFullYear();
                    for (let i = currentYear; i >= 1900; i--) {
                        const option = document.createElement("option");
                        option.value = i;
                        option.text = i;
                        yearSelect.appendChild(option);
                    }
                </script>


            </div>
        </div>
    </div>
