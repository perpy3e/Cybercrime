<!-- reset-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CYBER CRIME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #081043;">
    <div class="container text-start align-items-center mt-5 pt-4 pb-2" style="max-width: 30%; background-color: aliceblue;" id="move">
        <h1 class="display-5 text-capitalize text-primary mb-3">RESET YOUR PASSWORD</h1>
        <p>Enter the password that was sent to <strong><%= email %></strong></p> <!-- Dynamically display email -->
        
        <form id="newPassword" action="/newpass" method="POST" novalidate>
            <div class="mt-3 align-items-center">
                <label for="newpass">Password</label>
                <input type="text" class="form-control" id="newpass" name="newpass" required>
            </div>

            <div class="mt-3">
                <div id="error-message" class="text-danger" style="font-size: 14px;"></div>
            </div>

            <div class="mt-3 mb-3 text-center">
                <button class="btn btn-primary" type="submit">Reset password</button>
            </div>
        </form>
    </div>
</body>
</html>
